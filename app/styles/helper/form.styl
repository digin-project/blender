uiblue = #016fcd
uidarkblue = #0B61AB
uiwhite = #fff
uilightgrey = #e9e9e9

.form-control
    box-shadow none
    height auto
    padding 8px 0
    border none
    border-radius 0
    border-bottom 1px solid uilightgrey

    &:focus, &:active
        border-bottom-color uiblue
        box-shadow none
