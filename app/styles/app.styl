@import "helper/mixins"
@import "helper/navbar"
@import "helper/form"
@import "helper/button"


@import "app/login"
@import "app/tasks"

*
    box-sizing border-box
    outline none

html, body
    font-family "Roboto"
    background-color #fafafa
    position relative
    width 100%
    height 100%

.absolute-center
    position absolute
    width 100%
    max-width 500px
    height auto
    top 0
    left 0
    right 0
    bottom 0
    margin auto

section.container
    padding 0 0 20px 0
    overflow hidden

div.container
    padding 0 inherit inherit inherit
